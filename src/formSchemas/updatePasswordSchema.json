{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Root",
  "type": "object",
  "required": ["email", "password"],
  "properties": {
    "current_password": {
      "title": "Password",
      "type": "string",
      "default": "",
      "pattern": "^(?=[a-zA-Z]{1})(?=.*[0-9])(?=.*[a-zA-Z])(?=.*[A-Z])(?=.*[@#_$!+?\\[\\]]).{8,}$",
      "errorMessage": {
        "pattern": "Incorrect Password Format. Please try again!"
      }
    },
    "new_password": {
      "title": "Password",
      "type": "string",
      "default": "",
      "pattern": "^(?=[a-zA-Z]{1})(?=.*[0-9])(?=.*[a-zA-Z])(?=.*[A-Z])(?=.*[@#_$!+?\\[\\]]).{8,}$",
      "errorMessage": {
        "pattern": "Incorrect Password Format. Please try again!"
      }
    },
    "confirm_password": {
      "title": "Password",
      "type": "string",
      "default": "",
      "pattern": "^(?=[a-zA-Z]{1})(?=.*[0-9])(?=.*[a-zA-Z])(?=.*[A-Z])(?=.*[@#_$!+?\\[\\]]).{8,}$",
      "errorMessage": {
        "pattern": "Incorrect Password Format. Please try again!"
      }
    }
  }
}
